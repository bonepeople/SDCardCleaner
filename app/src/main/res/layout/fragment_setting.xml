<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/titleView"
        layout="@layout/view_title" />

    <TextView
        android:id="@+id/textView_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pagePadding"
        android:text="@string/caption_text_white"
        app:drawableEndCompat="@drawable/arrow_right"
        app:layout_constraintTop_toBottomOf="@id/titleView" />

    <TextView
        android:id="@+id/textView_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pagePadding"
        android:text="@string/caption_text_black"
        app:drawableEndCompat="@drawable/arrow_right"
        app:layout_constraintTop_toBottomOf="@id/textView_white" />
</androidx.constraintlayout.widget.ConstraintLayout>